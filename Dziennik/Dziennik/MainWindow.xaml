<Window x:Class="Dziennik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dziennik"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid Background="LightBlue">
        <Grid Margin="10" Background="White">
            <StackPanel>
                <TextBlock Text=" Login:" FontSize="16" />
                <TextBox Name="LoginTextBox" FontSize="14" />
                <TextBlock Text=" Hasło:" FontSize="16" Margin="0,10,0,0" />
                <PasswordBox Name="PasswordBox" FontSize="14" />
                <Button Content="Zaloguj" Click="LoginButton_Click" Margin="0,20,0,0" />
                <TextBlock Name="ErrorMessage" Foreground="Red" FontSize="14" Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
